<!DOCTYPE html>
<html>
  <head>
    <title>Furima32110</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav_left">
            <%= link_to imarge_tag("furima-logo-color.png",class: :logo), root_path %>
          </div>
          <% if user_signed_in?%>
            <%= link_to "#{@user_name}", root_path %>
            <%= link_to "ログアウト", root_path, method: :delete, class: :nav_logout %>
          <% else %>
            <%= link_to "ログイン", root_path, class: :nav_btn %>
            <%= link_to "新規登録", root_path, class: :nav_btn %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
