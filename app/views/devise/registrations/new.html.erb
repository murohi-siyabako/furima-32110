
  <h2 class="page-heading">会員情報入力</h2>

    <%= form_with(model: @user, url: registration_path, local: true) do |f| %>
      <%= render "devise/shared/error_messages", model: @user %>
      <div class="field">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.nickname_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :first_name, "お名前(全角)" %>
        <%= f.first_name_field :first_name, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :family_name, "お名前(全角)" %>
        <%= f.family_name_field :family_name, autocomplete: "family_name" %>
      </div>

      <div class="field">
        <%= f.label :first_name_kana, "お名前カナ(全角)" %>
        <%= f.first_name_kana_field :first_name_kana, autocomplete: "first_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :family_name_kana, "お名前カネ(全角)" %>
        <%= f.family_name_kana_field :family_name_kana, autocomplete: "family_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :birth_day, "生年月日" %>
        <%= f.birth_day_field :birth_day, autocomplete: "birth_day" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
